<script>
/* Basit otomatik slider */
(function(){
  const slides=[...document.querySelectorAll('#heroSlider .slide')];
  if(!slides.length) return;
  let i=0;
  setInterval(()=>{
    slides[i].classList.remove('is-active');
    i=(i+1)%slides.length;
    slides[i].classList.add('is-active');
  }, 4200);
})();
</script>

