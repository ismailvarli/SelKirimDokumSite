<!--------------------------- SAYFA STYLES (sayfaya özel) --------------------------->
<style>
    :root{
        --c-primary:#00B8B8;   /* Turkuaz */
        --c-primary-dark:#009090;
        --c-text:#0f172a;
        --c-muted:#64748b;
        --c-bg:#f8fafc;
        --radius:14px;
        --shadow:0 6px 18px rgba(2,8,23,.08);
    }
    .container{max-width:1200px;margin:0 auto;padding:0 20px}
    .lead{color:var(--c-muted);font-size:18px;line-height:1.75}
    .btn,.btn-primary{
        display:inline-block;padding:12px 20px;border-radius:10px;font-weight:700;text-decoration:none
    }
    .btn{background:#fff;border:2px solid var(--c-primary);color:var(--c-primary)}
    .btn:hover{background:var(--c-primary);color:#fff}
    .btn-primary{background:var(--c-primary);color:#fff;border:2px solid var(--c-primary)}
    .btn-primary:hover{background:var(--c-primary-dark);border-color:var(--c-primary-dark)}
    .section{padding:70px 0}
    .section-title{font-size:32px;font-weight:800;color:var(--c-primary-dark);text-align:center;margin:0 0 26px}
    .section-sub{color:var(--c-muted);text-align:center;max-width:800px;margin:0 auto 38px}

    /* ---------------- Hero Slider ---------------- */
    .hero{
        position:relative;background:#000;color:#fff;overflow:hidden
    }
    .hero::after{/* turkuaz degradeli overlay */
        content:"";position:absolute;inset:0;
        background:linear-gradient(180deg,rgba(0,184,184,.55),rgba(0,144,144,.45));
        pointer-events:none
    }
    .hero-inner{position:relative;z-index:2;padding:92px 0 110px;text-align:left}
    .hero h1{font-size:42px;line-height:1.2;margin:0 0 10px;font-weight:900}
    .hero-cta{display:flex;gap:12px;flex-wrap:wrap;margin-top:16px}

    .slider{position:absolute;inset:0;z-index:1}
    .slide{
        position:absolute;inset:0;opacity:0;transition:opacity .8s ease;
        background-size:cover;background-position:center
    }
    .slide.is-active{opacity:1}
    .hero-badges{display:flex;gap:10px;margin-top:14px;flex-wrap:wrap}
    .badge{background:rgba(255,255,255,.9);color:var(--c-primary-dark);padding:6px 10px;border-radius:999px;font-weight:700;font-size:12px}

    /* --------------- Hizmet Kartları --------------- */
    .cards{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:22px}
    .card{
        background:#fff;border-radius:var(--radius);box-shadow:var(--shadow);
        overflow:hidden;display:flex;flex-direction:column
    }
    .card img{width:100%;height:180px;object-fit:cover}
    .card-body{padding:16px 16px 18px}
    .card h3{margin:4px 0 10px;color:var(--c-primary);font-weight:800}
    .card p{color:var(--c-text);opacity:.9;line-height:1.7}

    /* --------------- Proje Galerisi --------------- */
    .gallery{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:14px}
    .gallery a{
        display:block;position:relative;border-radius:12px;overflow:hidden;box-shadow:var(--shadow)
    }
    .gallery img{width:100%;height:180px;object-fit:cover;transition:transform .4s}
    .gallery a:hover img{transform:scale(1.04)}
    .chip{position:absolute;left:10px;bottom:10px;background:rgba(0,184,184,.95);color:#fff;padding:4px 10px;border-radius:10px;font-size:12px;font-weight:700}

    /* --------------- Süreç Akışı --------------- */
    .steps{display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:18px;counter-reset:step}
    .step{
        background:#fff;border-left:6px solid var(--c-primary);padding:16px;border-radius:12px;box-shadow:var(--shadow)
    }
    .step h4{margin:6px 0 8px}
    .step::before{
        counter-increment:step;content:counters(step,".")".";
        font-weight:900;color:var(--c-primary-dark);margin-right:6px
    }

    /* --------------- SSS (Accordion) --------------- */
    .faq{max-width:900px;margin:0 auto}
    .faq details{
        background:#fff;border-radius:12px;margin-bottom:12px;padding:14px 16px;box-shadow:var(--shadow)
    }
    .faq summary{cursor:pointer;font-weight:800;color:var(--c-primary-dark);outline:none}
    .faq p{margin:10px 0 0;color:var(--c-text);line-height:1.7}

    /* --------------- CTA --------------- */
    .cta-band{
        background:linear-gradient(90deg,var(--c-primary),var(--c-primary-dark));color:#fff;border-radius:16px;
        padding:28px;display:flex;flex-direction:column;gap:12px;align-items:flex-start;box-shadow:var(--shadow)
    }
    .cta-band h3{margin:0;font-size:26px}
    .cta-actions{display:flex;gap:10px;flex-wrap:wrap}

    @@media (max-width:992px){
        .hero-inner{padding:76px 0 90px}
        .hero h1{font-size:34px}
    }
</style>

